@@ -1505,15 +1523,32 @@ void ImapService::enable()
 
     QMailAccountConfiguration accountCfg(_accountId);
     ImapConfiguration imapCfg(accountCfg);
-    _accountWasPushEnabled = imapCfg.pushEnabled();
+    bool pushEnabled = accountPushEnabled();
+#ifdef USE_KEEPALIVE
