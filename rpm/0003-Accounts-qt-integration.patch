+void SSOSessionManager::ssoSessionError(const SignOn::Error &code)
+{
+    if (code.type() == SignOn::Error::InvalidCredentials || code.type() == SignOn::Error:: UserInteraction) {
+        credentialsNeedUpdate();
+    }
